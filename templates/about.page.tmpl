{{template "base" . }}

{{define "content"}}
<div class="container">
    <div class="row">
        <div class="col">
            <h1>About Page</h1>
            <p>
                {{ if ne (index .StringMap "remote_ip") "" }}
                Remote IP: {{ index .StringMap "remote_ip" }}
                {{else}}
                Remote IP: Not available. Visit <a href="/">home</a> to set it.
                {{end}}
            </p>
        </div>
    </div>
</div>
{{end}}